---
resource_registry:
  OS::TripleO::DeployedServer::ControlPlanePort: /usr/share/openstack-tripleo-heat-templates/deployed-server/deployed-neutron-port.yaml

parameter_defaults:
  NeutronPublicInterface: nic2
  HypervisorNeutronPublicInterface: nic2
  ControlPlaneDefaultRoute: {{ tht_ctlplane_route }}
  ControlPlaneSubnetCidr: {{ tht_ctlplane_cidr }}
{% if tht_release == "queens" %}
  EC2MetadataIp: {{ tht_ctlplane_route }}
{% endif %}
  DeployedServerPortMap:
{% for item in tht_controller_nodes %}
    {{ item.hostname }}-ctlplane:
      fixed_ips:
        - ip_address: {{ item.address }}
      subnets:
        - cidr: 24
{% endfor %}
{% for item in tht_compute_nodes %}
    {{ item.hostname }}-ctlplane:
      fixed_ips:
        - ip_address: {{ item.address }}
      subnets:
        - cidr: 24
{% endfor %}
  HostnameMap:
{% for item in tht_controller_nodes %}
    overcloud-controller-{{ loop.index0 }}: {{ item.hostname }}
{% endfor %}
{% for item in tht_compute_nodes %}
    overcloud-compute-{{ loop.index0 }}: {{ item.hostname }}
{% endfor %}
